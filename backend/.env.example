# Archivo de configuración de ejemplo
# Copia este archivo como .env en la carpeta backend y modifica los valores

# Puerto del servidor
PORT=3000

# URI de conexión a MongoDB
MONGODB_URI=mongodb://localhost:27017/notifications_db

# Clave secreta para JWT (¡CAMBIA ESTA EN PRODUCCIÓN!)
JWT_SECRET=tu_clave_secreta_muy_segura_aqui_2024

# Tiempo de expiración del JWT
JWT_EXPIRE=7d

# Ambiente de ejecución
NODE_ENV=development

# URL del frontend (para CORS)
FRONTEND_URL=http://localhost:3001

# Configuración opcional para email (futuras características)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_password_de_app

# Configuración opcional para notificaciones push (futuras características)  
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=tu_email@example.com
